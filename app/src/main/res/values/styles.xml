<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="android:textColorPrimary">@color/textColorPrimary</item>

    <item name="android:textAppearance">@style/AppTheme.TextAppearance</item>

    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>

    <item name="android:colorBackground">@color/colorBackgroundPrimary</item>
    <item name="android:windowBackground">@color/colorBackgroundPrimary</item>

    <item name="android:buttonStyle">@style/AppTheme.Button</item>
    <item name="android:textAppearanceButton">@style/AppTheme.Button.TextAppearance</item>
  </style>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="AppTheme.TextAppearance" parent="TextAppearance.AppCompat">
    <item name="android:textColor">@color/textColorPrimary</item>
    <item name="android:textColorHint">@color/textColorHighlight</item>
    <item name="android:textColorHighlight">@color/textColorHighlight</item>
    <item name="android:textSize">@dimen/text_primary_size</item>
    <item name="android:textStyle">normal</item>
    <item name="android:typeface">sans</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="Button">
    <item name="android:minWidth">@dimen/button_large_min_width</item>
    <item name="android:gravity">center</item>
    <item name="android:scaleType">center</item>
    <item name="android:lines">1</item>
  </style>

  <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
    <item name="tabIndicatorHeight">2dp</item>
    <item name="tabPaddingStart">1dp</item>
    <item name="tabPaddingEnd">1dp</item>
    <item name="tabGravity">fill</item>
    <item name="tabMode">fixed</item>
    <item name="tabBackground">?attr/selectableItemBackground</item>
    <item name="tabIndicatorColor">?attr/colorAccent</item>
    <item name="tabSelectedTextColor">?attr/colorAccent</item>
    <item name="tabTextAppearance">@style/AppTheme.TabTextAppearance</item>
  </style>

  <style name="AppTheme.TabTextAppearance" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">?android:textColorSecondary</item>
    <item name="textAllCaps">false</item>
  </style>

  <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
    <item name="android:minHeight">@dimen/list_normal_item_height</item>
    <item name="android:background">@drawable/draw_btn_default</item>
    <item name="android:textAppearance">@style/AppTheme.Button.TextAppearance</item>
  </style>

  <style name="AppTheme.Button.TextAppearance" parent="TextAppearance.AppCompat.Button">
    <item name="android:textColor">@color/textColorPrimary</item>
    <item name="android:textSize">@dimen/text_primary_size</item>
    <item name="android:textStyle">normal</item>
    <item name="android:typeface">sans</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="AppTheme.Menu.TextAppearance.Title" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Menu">
    <item name="android:textColor">@color/textColorPrimary</item>
    <item name="android:textSize">@dimen/text_primary_size</item>
    <item name="android:textStyle">normal</item>
    <item name="android:typeface">sans</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="AppAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColorPrimary">@color/textColorPrimary</item>
    <item name="android:windowBackground">@color/colorPrimary</item>
  </style>


</resources>

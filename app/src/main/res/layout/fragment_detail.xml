<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="hungnguyen.com.demo.entity.Account" />
        <variable
            name="item"
            type="Account" />
    </data>

    <LinearLayout
        android:background="@color/colorBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="hungnguyen.com.demo.fragment.DetailFragment"
        android:paddingLeft="8dp"
        >

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{item.getTitleDisplay()}"
            android:textSize="@dimen/title_size"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{item.getUsernameDisplay()}"
            android:textSize="@dimen/username_size"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{item.getPasswordDisplay()}"
            android:textSize="@dimen/password_size"
            />

    </LinearLayout>
</layout>
